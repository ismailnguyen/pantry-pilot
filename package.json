{
  "name": "pantry-pilot",
  "version": "1.0.0",
  "description": "A production-ready service that automatically monitors pantry inventory and sends replenishment notifications",
  "type": "module",
  "main": "src/app/index.js",
  "scripts": {
    "start": "node -r dotenv/config src/app/index.js",
    "dev": "node -r dotenv/config --watch src/app/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "pantry",
    "inventory",
    "replenishment",
    "automation",
    "household"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@netlify/functions": "^4.2.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "googleapis": "^126.0.1",
    "helmet": "^7.0.0",
    "nodemailer": "^6.9.4",
    "pino": "^8.15.0",
    "serverless-http": "^3.2.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "preset": "default",
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "jest": {
        "useESM": true
      }
    },
    "moduleNameMapping": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
