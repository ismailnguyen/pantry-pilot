  "keywords": ["pantry", "inventory", "replenishment", "automation", "household"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pino": "^8.15.0",
    "nodemailer": "^6.9.4",
    "googleapis": "^126.0.1",
    "zod": "^3.22.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "@jest/globals": "^29.6.2"
  },
  "jest": {
    "preset": "default",
    "testEnvironment": "node",
