# MINIMAL CONFIGURATION FOR TESTING
# Copy this to .env and fill in the REQUIRED values marked with <FILL_THIS>

# REQUIRED: Generate a secure API key
API_KEY=<FILL_THIS>

# REQUIRED: Your Google Sheets setup (you can skip Gmail for now)
GOOGLE_SPREADSHEET_ID=<FILL_THIS>
GOOGLE_CLIENT_EMAIL=<FILL_THIS>
GOOGLE_PRIVATE_KEY=<FILL_THIS>

# REQUIRED: Gmail SMTP (fill these to test email)
SMTP_USER=<FILL_THIS>
SMTP_PASS=<FILL_THIS>
EMAIL_FROM=<FILL_THIS>
EMAIL_TO=<FILL_THIS>

# OPTIONAL: These have defaults
PORT=8080
TZ=Europe/Paris
ALLOW_INLINE_SECRETS=false
GOOGLE_SHEET_NAME=Inventory
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true